<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <defaults autowire="true" autoconfigure="true"/>

        <service id="Highcore\TemporalBundle\Registry\ActivityRegistry"/>

        <service id="Temporal\DataConverter\NullConverter"/>
        <service id="Temporal\DataConverter\BinaryConverter"/>
        <service id="Temporal\DataConverter\ProtoJsonConverter"/>
        <service id="Temporal\DataConverter\JsonConverter"/>

        <service id="Highcore\TemporalBundle\DataConverter\ClassObjectConverter"/>

        <service id="Temporal\DataConverter\DataConverter">
            <argument type="service" id="Temporal\DataConverter\NullConverter"></argument>
            <argument type="service" id="Temporal\DataConverter\BinaryConverter"></argument>
            <argument type="service" id="Temporal\DataConverter\ProtoJsonConverter"></argument>
            <argument type="service" id="Highcore\TemporalBundle\DataConverter\ClassObjectConverter"></argument>
            <argument type="service" id="Temporal\DataConverter\JsonConverter"></argument>
        </service>

        <service id="Highcore\TemporalBundle\WorkerFactory">
            <argument type="service" id="Temporal\DataConverter\DataConverter"/>
        </service>

        <service id="Temporal\WorkerFactory">
            <factory service="Highcore\TemporalBundle\WorkerFactory"/>
        </service>

        <service id="Highcore\TemporalBundle\WorkflowRuntimeCommand">
            <argument type="service" id="Temporal\WorkerFactory"/>
            <argument type="service" id="Highcore\TemporalBundle\Registry\ActivityRegistry"/>
            <argument type="service" id="kernel"/>
            <argument type="string">%temporal.worker_queue%</argument>
            <tag name="console.command"/>
        </service>

        <service id="Highcore\TemporalBundle\WorkflowClientFactory">
            <argument key="$temporalCliAddress">%temporal.temporal_cli_address%</argument>
        </service>

        <service id="Temporal\Client\WorkflowClient">
            <factory service="Highcore\TemporalBundle\WorkflowClientFactory"/>
        </service>

        <service id="Temporal\Client\WorkflowClientInterface" alias="Temporal\Client\WorkflowClient"/>
    </services>
</container>
